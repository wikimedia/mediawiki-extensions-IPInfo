{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"parserOptions": {
		"sourceType": "commonjs"
	},
	"rules": {
		"no-jquery/no-global-selector": "off",
		"prefer-const": "warn"
	},
	"settings": {
		"polyfills": [
			"URL",
			"URLSearchParams"
		]
	}
}
